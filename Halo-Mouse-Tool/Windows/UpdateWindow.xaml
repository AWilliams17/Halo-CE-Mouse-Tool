<Controls:MetroWindow 
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Name="UpdateWindowUI" x:Class="Halo_Mouse_Tool.Windows.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    mc:Ignorable="d"
        Title="Update" Height="105.282" Width="223.645" Background="#FF252525" TitleCharacterCasing="Normal" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="10,10,10,0">
        <StackPanel Orientation="Horizontal">
            <Label Content="Timeout (seconds):"/>
            <xctk:IntegerUpDown x:Name="TimeoutUpDown" Width="88" Increment="1" Foreground="White" Value="5" Maximum="10" Minimum="1"/>
        </StackPanel>
        <Button x:Name="UpdateCheckBtn" Content="Check for Updates" Margin="0,5,0,0" Click="UpdateCheckBtn_Click"/>
    </StackPanel>
</Controls:MetroWindow>
